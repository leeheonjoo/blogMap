<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.CouponMapper">
	

	<select id="couponCount" resultType="int">
		select count(*) from coupon
	</select>
	
	<select id="couponList_L" resultType="com.java.coupon.dto.CouponDto">
		<![CDATA[
			select * from coupon where coupon_discount='50' order by coupon_discount desc
		]]>
	</select>
	
	<select id="couponList_S" resultType="com.java.coupon.dto.CouponDto">
		<![CDATA[
			select * from coupon where coupon_discount < '50' order by coupon_discount desc
		]]>
	</select>
	
	
</mapper>
